<html lang="en">

<% include ../../partials/header %>

    <body>
        <% include ../../partials/nav %>
            <div class="container">
                <div class="row">
                    <% if (messages.success) {%>
                        <div class="alert alert-success">
                            <% messages.success.forEach(function(msg){ %>
                                <p>
                                    <%= msg %>
                                </p>
                                <% });%>
                        </div>
                        <% }%>
                            <% if (messages.error) {%>
                                <div class="alert alert-danger">
                                    <% messages.error.forEach(function(msg){ %>
                                        <p>
                                            <%= msg %>
                                        </p>
                                        <% });%>
                                </div>
                                <% }%>
                                    <div class="panel">
                                        <div class="panel-body">
                                            <form method="POST" action="/profile?_method=PUT" class="form-horizontal">
                                                <legend>Profile Information</legend>
                                                <div class="form-group">
                                                    <label for="email" class="col-sm-3">Email</label>
                                                    <div class="col-sm-7">
                                                        <input type="email" name="email" id="email" class="form-control" value="<%= user.email %>">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="name" class="col-sm-3">Name</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" name="name" id="name" class="form-control" value="<%= user.name%>">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Gender</label>
                                                    <div class="col-sm-4">
                                                        <label class="radio-inline radio col-sm-4">
                        <input type="radio" name="gender" value="male" <% if (user.gender === 'male') { %> <% checked } %> ><span>Male</span>
                    </label>
                                                        <label class="radio-inline col-sm-4">
                        <input type="radio" name="gender" value="female" <% if (user.gender === 'female') { %> <% checked } %> ><span>Female</span>
                    </label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="location" class="col-sm-3">Location</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" name="location" id="location" class="form-control" value="<%= user.location %>">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="website" class="col-sm-3">Website</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" name="website" id="website" class="form-control" value="<%= user.website %>">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Gravatar</label>
                                                    <div class="col-sm-4">
                                                        <img src="<%= user.gravatar%>" class="profile" width="100" height="100">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-offset-3 col-sm-4">
                                                        <button type="submit" class="btn btn-success">Update Profile</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="panel">
                                        <div class="panel-body">
                                            <form method="POST" action="/profile?_method=PUT" class="form-horizontal">
                                                <legend>Change Password</legend>
                                                <div class="form-group">
                                                    <label for="password" class="col-sm-3">New Password</label>
                                                    <div class="col-sm-7">
                                                        <input type="password" name="password" id="password" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="confirm" class="col-sm-3">Confirm Password</label>
                                                    <div class="col-sm-7">
                                                        <input type="password" name="confirm" id="confirm" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-4 col-sm-offset-3">
                                                        <button type="submit" class="btn btn-success">Change Password</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="panel">
                                        <div class="panel-body">
                                            <div class="form-horizontal">
                                                <legend>Linked Accounts</legend>
                                                <div class="form-group">
                                                    <div class="col-sm-offset-3 col-sm-4">
                                                        <% if (user.facebook) { %>
                                                            <p><a href="/unlink/facebook" class="text-danger">Unlink your Facebook account</a></p>
                                                            <% } else { %>
                                                                <p><a href="/auth/facebook">Link your Facebook account</a></p>
                                                                <% } %>
                                                                    <% if (user.twitter) { %>
                                                                        <p><a href="/unlink/twitter" class="text-danger">Unlink your Twitter account</a></p>
                                                                        <% } else { %>
                                                                            <p><a href="/auth/twitter">Link your Twitter account</a></p>
                                                                            <% } %>
                                                                                <% if (user.google) {%>
                                                                                    <p><a href="/unlink/google" class="text-danger">Unlink your Google account</a></p>
                                                                                    <% } else { %>
                                                                                        <p><a href="/auth/google">Link your Google account</a></p>
                                                                                        <% } %>
                                                                                            <% if (user.github) { %>
                                                                                                <p><a href="/unlink/github" class="text-danger">Unlink your Github account</a></p>
                                                                                                <% } else { %>
                                                                                                    <p><a href="/auth/github">Link your Github account</a></p>
                                                                                                    <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel">
                                        <div class="panel-body">
                                            <form method="POST" action="/profile?_method=DELETE" class="form-horizontal">
                                                <legend>Delete Account</legend>
                                                <div class="form-group">
                                                    <p class="col-sm-offset-3 col-sm-9">You can delete your account, but keep in mind this action is irreversible.</p>
                                                    <div class="col-sm-offset-3 col-sm-9">
                                                        <button type="submit" class="btn btn-danger">Delete my account</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                </div>

                <% include ../../partials/footer %>
                    <% include ../../partials/scripts %>
    </body>

</html>