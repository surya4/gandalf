<html lang="en">
<% include ../../partials/header %>

    <body>
        <% include ../../partials/nav %>
            <div class="container">
                <div class="row">
                    <div class="panel">
                        <div class="panel-body">
                            <% if (messages.success) {%>
                                <div class="alert alert-success">
                                    <% messages.success.forEach(function(msg){ %>
                                        <p>
                                            <%= msg %>
                                        </p>
                                        <% });%>
                                </div>
                                <% }%>
                                    <% if (messages.info) {%>
                                        <div class="alert alert-info">
                                            <% messages.info.forEach(function(msg){ %>
                                                <p>
                                                    <%= msg %>
                                                </p>
                                                <% });%>
                                        </div>
                                        <% }%>
                                            <% if (messages.error) {%>
                                                <div class="alert alert-danger">
                                                    <% messages.error.forEach(function(msg){ %>
                                                        <p>
                                                            <%= msg %>
                                                        </p>
                                                        <% });%>
                                                </div>
                                                <% }%>
                                                    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                                                        <form role="form" action="/reset" method="post" class="reset-form">
                                                            <legend>Reset Password</legend>
                                                            <p>Enter your email address below and we'll send you password reset instructions.</p>
                                                            <div class="form-group">
                                                                <label for="password">New Password</label>
                                                                <input type="password" name="password" id="password" placeholder="New password" class="form-control" autofocus>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="confirm">Confirm Password</label>
                                                                <input type="password" name="confirm" id="confirm" placeholder="Confirm password" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <button type="submit" class="btn btn-success">Change Password</button>
                                                            </div>
                                                        </form>
                                                    </div>
                        </div>
                    </div>
                </div>
            </div>
            <% include ../../partials/footer %>
                <% include ../../partials/scripts %>
    </body>

</html>